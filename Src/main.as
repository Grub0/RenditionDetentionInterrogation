package  {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	import flash.media.SoundChannel;	import flash.media.Sound;	import flash.net.URLRequest;			public class main extends MovieClip {				public var monitorSound:Sound;		public var monitorChannel:SoundChannel;		public var request:URLRequest;					public var tortureCount:int;		public var heartNum:int;		public var monStarted:Boolean;				public function main() 		{			// constructor code			this.addEventListener(MouseEvent.CLICK, startGame);			RM.Torture.addEventListener(MouseEvent.CLICK, addTorture);			this.addEventListener(Event.ENTER_FRAME, updater);		}				public function updater(e:Event):void		{			if(RM.currentFrame == 182 && monStarted == false)			{				request = new URLRequest("Heart Monitor.mp3");				monitorSound = new Sound(request);				monitorChannel = monitorSound.play(0, 99999);				monStarted = true;				RM.Heart.gotoAndPlay(2);			}						if(RM.currentFrame == 1)			{				tortureCount = 0;			}			if(tortureCount == 1 && heartNum != 1)			{				monitorChannel.stop();				request = new URLRequest("Heart Monitor 2.mp3");				monitorSound = new Sound(request);				monitorChannel = monitorSound.play(0, 99999);				RM.Heart.gotoAndPlay(17);				heartNum = 1;			}			if(tortureCount == 0 && heartNum != 0)			{				RM.Heart.gotoAndStop(1);				heartNum = 0;				monStarted = false;				monitorChannel.stop();			}			else if(tortureCount == 2 && heartNum != 2)			{				monitorChannel.stop();				request = new URLRequest("Heart Monitor 3.mp3");				monitorSound = new Sound(request);				monitorChannel = monitorSound.play(0, 99999);				RM.Heart.gotoAndPlay(33);				heartNum = 2;			}			else if(tortureCount == 3 && heartNum != 3)			{				monitorChannel.stop();				request = new URLRequest("Heart Monitor 4.mp3");				monitorSound = new Sound(request);				monitorChannel = monitorSound.play(0, 99999);				RM.Heart.gotoAndPlay(49);				heartNum = 3;			}			else if(tortureCount == 4 && heartNum != 4)			{				monitorChannel.stop();				request = new URLRequest("Heart Monitor 5.mp3");				monitorSound = new Sound(request);				monitorChannel = monitorSound.play(0, 99999);				RM.Heart.gotoAndPlay(65);				heartNum = 4;			}			else if(tortureCount == 5 && heartNum != 5)			{				monitorChannel.stop();				request = new URLRequest("Heart Monitor 6.mp3");				monitorSound = new Sound(request);				monitorChannel = monitorSound.play(0, 99999);				RM.Heart.gotoAndStop(81);				heartNum = 5;				RM.gotoAndStop(499);			}						if(RM.currentFrame == 268 && tortureCount == 0)			{				RM.gotoAndStop(269);			}			else if(RM.currentFrame == 268 && tortureCount == 1)			{				RM.gotoAndStop(293);			}						else if(RM.currentFrame == 268 && tortureCount == 2)			{				RM.gotoAndStop(332);			}						else if(RM.currentFrame == 268 && tortureCount == 3)			{				RM.gotoAndStop(402);			}						else if(RM.currentFrame == 268 && tortureCount == 4)			{				RM.gotoAndStop(433);			}						if(RM.currentFrame == 377)			{				request = new URLRequest("ps-0.mp3");				monitorSound = new Sound(request);				monitorChannel = monitorSound.play(0, 1);			}			else if(RM.currentFrame == 464)			{				request = new URLRequest("ps-0.mp3");				monitorSound = new Sound(request);				monitorChannel = monitorSound.play(0, 1);			}		}				public function startGame(e:Event):void		{			RM.gotoAndPlay(RM.currentFrame + 1);		}				public function addTorture(e:Event):void		{			tortureCount++;		}	}	}